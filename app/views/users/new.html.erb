<%= form_for :user do |f| %>
<% if @user.errors.any? %>
  <% user.error.full_messages do |msg| %>
  <ul>
    <li><%= msg %></li>
  </ul>
  <% end %>
<% end %>
<div class="field_with_errors">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="field_with_errors">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div class="field_with_errors">
  <%= f.label :password %>
  <%= f.text_field :password %>
</div>
<div class="field_with_errors">
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
</div>
<div class="submit">
  <%= f.submit "Sign Up" %>
</div>
<% end %>
