<%= form_for @user, url: login_path, method: :post do |f| %>
<div class="field_with_errors">
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>
<div class="field_with_errors">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<div class="submit">
  <%= f.submit 'Login' %>
</div>
<% end %>

<%= button_to "Sign Up", new_user_path, method: :get %>
